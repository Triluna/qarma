<!DOCTYPE html>
<html>
<head>
  <title>Qarma</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <head>
    <title>Qarma</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header">
      <!-- logo -->
      <div class="col-xs-6">
        <div class="logo">
          <img src="../../assets/images/q-logo.png">
        </div>
      </div>

      <!-- sign-out-btn -->
      <div class="col-xs-6">
        <% if current_user %>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "sign-out-btn" %></li>
        <% end %>
      </div>
    </div>

    <div class="splash-container">
      <%= yield %>
      <% if !current_user %>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, :class =>
      "facebook-button" %>
      <% end %>
    </div>


    <!-- navigation bar -->
    <!--<li><%= link_to "Sign up", new_user_registration_path %></li>-->
    <!--<li><%= link_to "Sign in", new_user_session_path %></li>-->



    <!-- error/feedback displays -->
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>


  </body>
  </html>
